<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:elevation="5sp"
    android:background="@drawable/btn_rounded_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgWisata"
        android:layout_width="120sp"
        android:layout_height="150sp"
        android:layout_margin="5sp"
        android:background="@drawable/btn_rounded_white"
        android:scaleType="centerCrop"
        android:src="@drawable/ilustrasi3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namaWisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:text="Nama wisata"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_marginTop="5sp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressDrawable="@drawable/custom_rating_bar"
                android:stepSize="0.5" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ic_pin"/>

                <TextView
                    android:id="@+id/locWisata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:maxWidth="150sp"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:fontFamily="@font/inter"
                    android:text="Lokasi wisata"
                    android:textSize="11sp"
                    android:textColor="@color/grey"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtjarak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rounded_blue"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                android:layout_marginTop="10sp"
                android:text="1 km"
                android:textAlignment="center"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btFavorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_favorite_false"/>

    </LinearLayout>
</LinearLayout>
